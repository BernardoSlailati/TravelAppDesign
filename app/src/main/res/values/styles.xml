<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TitleTextLarge" parent="TitleText">
        <item name="android:textSize">72sp</item>
    </style>

    <style name="TitleTextSmall" parent="TitleText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SubtitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SubtitleTextLarge" parent="SubtitleText">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="SubtitleTextSmall" parent="SubtitleText">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseTextLarge" parent="BaseText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="BaseTextSmall" parent="BaseText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BaseTopicText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BasePrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_loading_states</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">@dimen/four_times_default_margin</item>
        <item name="android:paddingEnd">@dimen/four_times_default_margin</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PrimaryButtonLarge" parent="BasePrimaryButton">
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">64dp</item>
        <item name="android:paddingTop">@dimen/three_times_default_margin</item>
        <item name="android:paddingBottom">@dimen/three_times_default_margin</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="PrimaryButtonSmall" parent="BasePrimaryButton">
        <item name="android:paddingStart">@dimen/twice_default_margin</item>
        <item name="android:paddingEnd">@dimen/twice_default_margin</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="HomeBottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>